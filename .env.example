# ===============================================
# SPRING BOOT BLOG PLATFORM CONFIGURATION
# ===============================================
# Copy this file to .env and update the values according to your environment
# IMPORTANT: Never commit .env file to version control

# ===============================================
# SERVER CONFIGURATION
# ===============================================
SERVER_PORT=8080

# ===============================================
# DATABASE CONFIGURATION
# ===============================================
# MySQL Database URL
DB_URL=jdbc:mysql://localhost:3306/blog_app_apis

# Database Credentials
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# ===============================================
# JPA CONFIGURATION
# ===============================================
# Options: create, update, create-drop, validate, none
JPA_DDL_AUTO=update

# Show SQL queries in logs (true/false)
JPA_SHOW_SQL=false

# ===============================================
# JWT SECURITY CONFIGURATION
# ===============================================
# JWT Secret Key (MUST be changed in production)
# Generate a strong secret: openssl rand -base64 64
JWT_SECRET=afafasfafafasfasfasfafacasdasfasxASFACASDFACASDFASFASFDAFASFASDAADSCSDFADCVSGCFVADXCcadwavfsfarvf

# JWT Token Expiration in seconds (default: 18000 = 5 hours)
JWT_EXPIRATION=18000

# ===============================================
# FILE UPLOAD CONFIGURATION
# ===============================================
# Maximum file size for uploads
MAX_FILE_SIZE=10MB

# Maximum request size
MAX_REQUEST_SIZE=10MB

# Image upload directory path
IMAGE_UPLOAD_PATH=images/

# ===============================================
# LOGGING CONFIGURATION
# ===============================================
# Security logging level: DEBUG, INFO, WARN, ERROR
SECURITY_LOG_LEVEL=INFO

# ===============================================
# DEFAULT ADMIN USER (DEVELOPMENT ONLY)
# ===============================================
# Remove these in production and use proper user registration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin_secure_password_here
ADMIN_ROLES=ADMIN

# ===============================================
# PRODUCTION ENVIRONMENT VARIABLES
# ===============================================
# Additional variables for production deployment

# Environment Profile
SPRING_PROFILES_ACTIVE=prod

# SSL Configuration (if using HTTPS)
# SERVER_SSL_ENABLED=true
# SERVER_SSL_KEY_STORE=classpath:keystore.p12
# SERVER_SSL_KEY_STORE_PASSWORD=password
# SERVER_SSL_KEY_STORE_TYPE=PKCS12

# Email Configuration (if implementing email features)
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your_email@gmail.com
# MAIL_PASSWORD=your_app_password
# MAIL_SMTP_AUTH=true
# MAIL_SMTP_STARTTLS_ENABLE=true

# External API Configuration (if using third-party services)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=your_s3_bucket_name

# Redis Configuration (if using Redis for caching)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password